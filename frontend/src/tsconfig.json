{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "components/*": ["../src/components/*"],
      "assets/*": ["../src/assets/*"],
      "styles/*": ["../src/styles/*"],
      "utils/*": ["../src/utils/*"],
      "api/*": ["../src/api/*"],
      "const/*": ["../src/const/*"]
    },
    "rootDir": "../src"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "typeRoots": ["src/types/global.d.ts"],
  "include": ["../src"]
}
